<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
  <conversionRule conversionWord="clr"
    converterClass="org.springframework.boot.logging.logback.ColorConverter"/>

  <appender name="LOCAL_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%clr(%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}){faint} %clr(%5p) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%ex
      </pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="LOCAL_CONSOLE"/>
  </root>

</configuration>